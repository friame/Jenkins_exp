pipeline {
    agent any

    node ('jenkins-pipeline') {

       def pwd = pwd()
        checkout scm

    stages {
        stage ('Compile Stage') {

            steps {
                withMaven(maven : 'maven.3') {
                    sh 'mvn clean compile'
                }
            }
        }

        stage ('Testing Stage') {

            steps {
                withMaven(maven : 'maven.3') {
                    sh 'mvn test'
                }
            }
        }

        stage ('Deployment Stage') {
            steps {
                withMaven(maven : 'maven.3') {
                    sh 'mvn deploy'
                }
            }
        }
    }
  }
}